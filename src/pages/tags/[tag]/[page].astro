---
import { getCollection } from "astro:content";
import TagPosts from "@layouts/TagPosts.astro";
import getUniqueTags from "@utils/getUniqueTags";
import getPageNumbers from "@utils/getPageNumbers";
import getPagination from "@utils/getPagination";
import { getLocaleFromValue } from "@utils/locale";
import { slugifyAll } from "@utils/slugify";
import { getLocalizedPostGroups } from "@utils/localizedPostGroups";

export interface Props {
  tag: string;
  tagName: string;
}

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  const tags = getUniqueTags(posts);

  return tags.flatMap(({ tag, tagName }) => {
    const tagPostGroups = getLocalizedPostGroups(
      posts.filter(post => slugifyAll(post.data.tags).includes(tag))
    );
    const totalPages = getPageNumbers(tagPostGroups.length);

    return totalPages.map(page => ({
      params: { tag, page },
      props: { tag, tagName },
    }));
  });
}

const { page } = Astro.params;
const { tag, tagName } = Astro.props;
const locale = getLocaleFromValue(Astro.url.searchParams.get("lang")) ?? "ko";
const posts = await getCollection("blog", ({ data }) => !data.draft);
const taggedPostGroups = getLocalizedPostGroups(
  posts.filter(post => slugifyAll(post.data.tags).includes(tag))
);
const groupPagination = getPagination({
  posts: taggedPostGroups,
  page,
});
const pagination = {
  ...groupPagination,
  paginatedPosts: groupPagination.paginatedPosts.flatMap(group => group.posts),
};
---

<TagPosts {...pagination} {tag} {tagName} locale={locale} />
